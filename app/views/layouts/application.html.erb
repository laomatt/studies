<!DOCTYPE html>
<html>
<head>
  <title>QuickStudies</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/public/bootstrap/css/">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.js"></script>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
</head>
<header>
  <ul class="nav nav-tabs nav-justified">
    <script>
      $('body').on('click', '.content-container', function(event) {
        var ele = $(this).parent().find('ul.dropdown-menu');
        event.preventDefault();
        ele.slideUp(300);
      });
      $("body").on('click', '.dropdown-toggle', function(event) {
        event.preventDefault();
        var ele = $(this).parent().find('ul.dropdown-menu');
        if(ele.css('display') == 'none'){
          ele.slideDown(300);
        } else {
          ele.slideUp(300);
          $('body').on('click', function(event) {
            event.preventDefault();
          });

        }
      });
    </script>
  <% if current_user %>
  <li class="dropdown">
    <a href="#" data-toggle="dropdown" class="dropdown-toggle">
      My Stuff <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li>
        <a href="/home/user_slides">My Slides</a>
      </li>
      <li>
        <a href="/home/user_slideshows">My SlideShows</a>
      </li>
      <li><a href="/home/user_art">My Art</a></li>
    </ul>

  </li>
    <li><a href="/">Browse SlideShows</a></li>
    <li>
      <a href="/home/<%= current_user.id %>/create_slide_show">New Slide Show</a>
    </li>
    <li>
      <a href="/user_log_out_route/sign_out">Log out</a>
    </li>

  <% else %>
    <li>
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => "fblogin" %>
    </li>
    <li><a href="/">Browse SlideShows</a></li>
    <li><a href="/">Browse Art</a></li>
    <li><a href="/">Browse Slides</a></li>
  <% end %>
  </ul>
</header>
<body>
  <div class="backdrop"></div>
  <div class="content-container">

      <%= yield %>

  </div>
</body>
</html>
<style>
  .content-container {
    width: 100%;
    padding: 1%;
    margin: 0 auto;
    position: relative;
    top: 0%;
    height: 100%;
    background-color: transparent;
    color: black;
  }

  body {
    background-color: rgba(0,0,0,.4);
  }
</style>


<script>
  $('body').on('click', '.backdrop', function(event) {
    event.preventDefault();
    $(this).fadeOut(300, function() {

    });
    $(".form-modal").fadeOut(300, function() {});
  });
</script>
<div id="pose_window_container" class="form-modal">
</div>
